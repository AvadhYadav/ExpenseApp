<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/statistics"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context="com.example.vasu.expense_manager.StatisticsFragment">
    <ScrollView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/bar_graph" android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                />


            <LinearLayout android:id="@+id/chart" android:orientation="horizontal"
                android:layout_width="200dp" android:layout_height="wrap_content"
                android:layout_below="@+id/bar_graph"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
